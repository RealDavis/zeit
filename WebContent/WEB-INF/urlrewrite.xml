<?xml version="1.0" encoding="UTF-8"?>

<urlrewrite>
	<rule>
		<from>/test/status/</from>
		<to type="redirect">%{context-path}/rewrite-status</to>
	</rule>
	<!-- usuario -->
	<rule>
		<from>/usuario/cadastro</from>
		<to>/main?action=cadastrousuario</to>
	</rule>
	<rule>
		<condition type="method">POST</condition>
		<from>/usuario/cadastrar</from>
		<to>/usuario</to>
	</rule>
	<!-- login -->
	<rule>
		<from>/login</from>
		<to>/main?action=login</to>
	</rule>
	<rule>
		<condition type="method">POST</condition>
		<from>/logar</from>
		<to>/login</to>
	</rule>
	<rule>
		<from>/tarefas/cadastro</from>
		<to>/main?action=cadastro</to>
	</rule>
	<!-- tarefas -->
	<rule>
		<from>^/$</from>
		<to type="forward">/index</to>
	</rule>
	<rule>
		<from>/index</from>
		<to>/main?action=index</to>
	</rule>
	<rule>
		<condition type="method">POST</condition>
		<from>/tarefas/cadastrar</from>
		<to>/tarefa</to>
	</rule>
	
	<outbound-rule>
		<from>/rewrite-status</from>
		<to>/test/status/</to>
	</outbound-rule>
</urlrewrite>